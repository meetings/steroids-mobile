li
    - var c = user.proposal_answers[proposal.id] ? user.proposal_answers[proposal.id] : 'no';
    - if ( mode === 'choose' ) c = 'choose';
    a(href="#",data-option-id=proposal.id,class="option-"+c,data-time=proposal.date_string + ' ' + proposal.time_string)
        div.top-bar
            span.left=proposal.date_string
            span.right=proposal.time_string
        //span.right=time_string
        - if ( participants.length)
            div.participants
                - participants = _.sortBy( participants, function(p){ if( p.proposal_answers[proposal.id] === 'yes' ) return 1; else if( p.proposal_answers[proposal.id] === 'no' ) return 3; else return 2; });
                - participants.forEach(function(p){
                    div.wrap
                        - if( p.image !== '' )
                            img(src=p.image, width='20', height='20')
                        - else
                            span.placeholder-20
                        - if( p.proposal_answers[proposal.id] === 'yes' )
                            span.rsvp.yes
                        - else if( p.proposal_answers[proposal.id] === 'no' )
                            span.rsvp.no
                        - else
                            span.rsvp.unknown
                - })
