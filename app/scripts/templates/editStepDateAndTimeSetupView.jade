div#edit-form.form-full-width(data-role="fieldcontain")
    ul#date-selection(data-role='listview', data-inset='true')
        li(data-icon="false")
            .ui-grid-a
                .ui-block-a Starts
                .ui-block-b 
                    input#meeting-begin-date(data-theme="b",type="datetime-local",name="meeting-begin-date",value=moment.unix(begin_epoch).format('YYYY-MM-DDTHH:ss'),placeholder="Starts")
        li(data-icon="false")
            .ui-grid-a
                .ui-block-a Ends
                .ui-block-b 
                    input#meeting-end-date(data-theme="b",type="datetime-local",name="meeting-end-date",value=moment.unix(end_epoch).format('YYYY-MM-DDTHH:ss'),placeholder="Ends")

    div.controls
        a#submitStepDateAndTimeFinish(data-theme="b", type="button")
            - if(id != null)
                | Save
            - else
                | Done
