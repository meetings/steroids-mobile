div#edit-form.form-full-width(data-role="fieldcontain")
    ul#date-selection(data-role='listview', data-inset='true')
        li(data-icon="false")
            .ui-grid-a
                .ui-block-a Starts
                .ui-block-b 
                    - var beginString = DateFormat.dateTimeInputString(begin_epoch)
                    input#meeting-begin-date(data-theme="b",type="datetime-local",name="meeting-begin-date",value=beginString,placeholder="Starts")
        li(data-icon="false")
            .ui-grid-a
                .ui-block-a Ends
                .ui-block-b 
                    - var endString = DateFormat.dateTimeInputString(end_epoch)
                    input#meeting-end-date(data-theme="b",type="datetime-local",name="meeting-end-date",value=endString,placeholder="Ends")

    div.controls
        a#submitStepDateAndTimeFinish(data-theme="b", type="button")
            - if(id != null)
                | Save
            - else
                | Done
